<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical"
    android:paddingHorizontal="@dimen/two_size_unit"
    android:gravity="top|right">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_question_directive"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:layout_marginVertical="@dimen/four_size_unit"
        android:textSize="@dimen/abc_text_size_large_material"/>
    
    <TextView
        android:id="@+id/txv_first_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/half_size_unit"
        android:text="@string/text_first_question"/>
    <Spinner
        android:id="@+id/spn_first_question"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/txv_second_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/two_size_unit"
        android:layout_marginBottom="@dimen/half_size_unit"
        android:text="@string/text_second_question"/>
    <Spinner
        android:id="@+id/spn_second_question"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/two_size_unit"/>

    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/btn_next"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccentText"
        android:text="@string/action_continue"/>
</LinearLayout>