<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical"
    android:paddingHorizontal="@dimen/two_size_unit"
    android:gravity="top|right">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_final_question_directive"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:layout_marginVertical="@dimen/four_size_unit"
        android:textSize="@dimen/abc_text_size_large_material"/>
    
    <TextView
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/half_size_unit"
        android:text="@string/text_clarity_question"/>
    <Spinner
        android:id="@+id/spn_clarity_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginBottom="@dimen/four_size_unit"
        android:background="@drawable/spinner_selector"/>

    <TextView
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/half_size_unit"
        android:text="@string/text_enjoyability_question"
        />
    <Spinner
        android:id="@+id/spn_enjoyability_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp" 
        android:layout_marginBottom="@dimen/four_size_unit"
        android:background="@drawable/spinner_selector"/>

    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/btn_finish"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="@string/action_finish"/>
</LinearLayout>